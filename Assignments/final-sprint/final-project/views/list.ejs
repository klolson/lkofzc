<div class="container">
    <h1 class="display-4">Reviews</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% reviews.forEach(function(review){ %>
                <tr>
                    <td><%= review.id %></td>
                    <td><%= review.title %></td>
                    <td>
                        <a href="/reviews/view/<%= review.id %>" class="btn btn-primary">View</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>